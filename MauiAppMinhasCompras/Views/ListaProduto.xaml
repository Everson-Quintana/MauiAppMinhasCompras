<?xml version="1.0" encoding="utf-8" ?>
<!-- Página principal da listagem de produtos, herda de ContentPage do .NET MAUI -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">
    
    <!-- Barra de ferramentas superior com dois botões: Somar e Adicionar -->
    <ContentPage.ToolbarItems>
        <!-- Botão que soma os valores dos produtos exibidos -->
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>
        <!-- Botão que navega para a página de adição de novo produto -->
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"  />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>

        <!-- Define um estilo para as células da ListView -->
        <ResourceDictionary>
            <Style TargetType="Label">

                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="Padding" Value="5,0"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Substituído StackLayout por Grid para evitar uso de opções obsoletas -->
    <Grid RowDefinitions="Auto, *">
        <!-- Barra de busca para filtrar produtos por texto -->
        <SearchBar x:Name="txt_search" Margin="-15,0,0,0" Placeholder="Busca de Produtos:" TextChanged="txt_search_TextChanged" Grid.Row="0" />
        <!-- Substituído Frame por Border conforme recomendação do .NET 9 -->
        <Border Padding="0" Margin="10" Grid.Row="1">
        <!-- ListView que exibe a lista de produtos -->
        <ListView x:Name="lst_produtos" IsPullToRefreshEnabled="True" Refreshing="lst_produtos_Refreshing" ItemSelected="lst_produtos_ItemSelected">
            <!-- Cabeçalho da lista, define os títulos das colunas -->
            <ListView.Header>
                <Grid Grid.ColumnDefinitions =" 30, 100, 80, 50, 90" BackgroundColor="White" Padding="0">
                    <Label Grid.Column ="0" Text="ID" Padding="5" FontAttributes="Bold"/>
                        <Label Grid.Column ="1" Text="Descrição" FontAttributes="Bold"/>
                        <Label Grid.Column ="2" Text="Preço" FontAttributes="Bold"/>
                        <Label Grid.Column ="3" Text="Qtd" FontAttributes="Bold"/>
                        <Label Grid.Column ="4" Text="Total" FontAttributes="Bold"/>
                </Grid>
            </ListView.Header>
            
            <!-- Template de item: define como cada produto será exibido -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!-- Menu de contexto do item, permite remover o produto -->
                        <ViewCell.ContextActions>
                            <MenuItem Text=" Remover " Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>
                        <!-- Grid para exibir os dados do produto em colunas -->
                            <Grid Grid.ColumnDefinitions =" 30, 100, 80, 50, 90 " >
                            <Label Grid.Column ="0" Text="{Binding Id}" />
                            <Label Grid.Column ="1" Text="{Binding Descricao}" />
                            <Label Grid.Column ="2" Text="{Binding Preco, StringFormat='{}{0:c}'}" />
                            <Label Grid.Column ="3" Text="{Binding Quantidade}" />
                            <Label Grid.Column ="4" Text="{Binding Total, StringFormat='{}{0:c}'}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </Border>
    </Grid>
</ContentPage>